{
  "env": {
    "browser": true,
    "es6": true,
    "node": true,
    "jest": true
  },
  "extends": ["eslint:recommended", "plugin:prettier/recommended"],
  "ignorePatterns": "dist",
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "sourceType": "module"
  },
  "globals": {
    "jest": true
  },
  "plugins": [
    "prettier", 
    "@typescript-eslint"
  ],
  "rules": {
    "prettier/prettier": "off",
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "no-unused-vars": "warn",
    "object-curly-spacing": ["error", "always"],
    "array-bracket-spacing": ["error", "always"]
  }
}
